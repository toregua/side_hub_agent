<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>sidehub-agent</AssemblyName>
  </PropertyGroup>

  <!-- Include pty-helper Node.js files (node_modules must be installed separately via npm install) -->
  <ItemGroup>
    <None Include="pty-helper\index.js" CopyToOutputDirectory="PreserveNewest" Link="pty-helper\index.js" />
    <None Include="pty-helper\package.json" CopyToOutputDirectory="PreserveNewest" Link="pty-helper\package.json" />
  </ItemGroup>

</Project>
